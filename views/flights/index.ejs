<%- include('../partials/header') %>
<%- include('../partials/nav') %>
    <h1>Flights of the Conchords</h1>
    <div id="divider"></div>


    
    <table>
        <thead>
            <th>Airline</th>
            <th>Airport</th>
            <th>Flight Number</th>
            <th>Depart Date</th>
            <th></th>
        </thead>
        <tbody>
            <% flights.forEach(f => { %>
                <tr class= <%= (today - f.departs > 0 ) ? "past" : ""; %>>
                    <td><%= f.airline %></td>
                    <td><%= f.airport %></td>
                    <td><%= f.flightNo %></td>
                    <td><%= dateFormat(f.departs, "dddd, mmmm dS, yyyy, h:MM TT") %></td>
                    <td><a href="/flights/<%= f._id %>">Details</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
<%- include('../partials/footer') %>